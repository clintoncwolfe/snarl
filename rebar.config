%% -*- erlang -*-
{sub_dirs, ["rel", "apps/snarl_oauth", "apps/snarl"]}.
{lib_dirs, ["apps"]}.
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "../../doc"}]}.
{eunit_opts, [{report,{eunit_surefire, [{dir,"."}]}}]}.

{deps,
 [
  %% the client libraries always use tagged versions we need the newest for development so.
  {mdns_client_lib, ".*", {git, "https://github.com/Licenser/mdns_client_lib.git", {branch, "master"}}},
  %%
  {meck, "0.8.2", {git, "git://github.com/basho/meck.git", {tag, "0.8.2"}}},
  {lager, "2.0.*", {git, "git://github.com/basho/lager", {tag,"2.0.3"}}},
  {clique, ".*", {git, "https://github.com/project-fifo/clique.git", {branch, "develop"}}},
  {cuttlefish, ".*", {git, "https://github.com/tsloughter/cuttlefish.git", {branch, "develop"}}},
  {bitcask, ".*", {git, "https://github.com/basho/bitcask.git", {branch,"feature/otp-17"}}},
  {bcrypt, ".*", {git, "https://github.com/project-fifo/erlang-bcrypt.git", {branch, "master"}}},
  {yubico, ".*", {git, "https://github.com/project-fifo/erlang-yubico.git", {branch, "master"}}},
  {fifo_db, ".*", {git, "https://github.com/project-fifo/fifo-db.git", {branch, "basholeveldb"}}},
  {fifo_dt, ".*", {git, "https://github.com/project-fifo/fifo_dt.git", {branch, "master"}}},
  {fifo_utils, ".*", {git, "https://github.com/project-fifo/fifo_utils.git", {branch, "master"}}},
  {riak_core, ".*", {git, "git://github.com/project-fifo/riak_core", {branch, "fifo-0.6.2"}}},
  {riak_ensemble, ".*", {git, "https://github.com/basho/riak_ensemble.git", {branch, "develop"}}},
  {uuid, ".*", {git, "https://github.com/project-fifo/erlang-uuid.git", {branch, "master"}}},
  {jsx, ".*", {git, "http://github.com/talentdeficit/jsx.git", {tag, "v1.4.4"}}},
  {rankmatcher, ".*", {git, "https://github.com/Licenser/rankmatcher.git", {branch, "master"}}},
  {mdns_server_lib, ".*", {git, "https://github.com/Licenser/mdns_server_lib.git", {branch, "master"}}},
  {jsxd, ".*", {git, "https://github.com/Licenser/jsxd.git", {branch, "master"}}},
  {fifo_spec, ".*", {git, "https://github.com/project-fifo/fifo_spec.git", {branch, "test"}}},
  {libsnarlmatch, ".*", {git, "https://github.com/project-fifo/libsnarlmatch.git", {branch, "master"}}},
  {folsom_ddb, "0.1.12"},
  {lager_watchdog, ".*", {git, "https://github.com/project-fifo/lager_watchdog.git", {branch, "master"}}},
  {oauth2, "0.6.*", {git, "https://github.com/kivra/oauth2.git", {tag, "0.6.0"}}},
  {fqc, ".*", {git, "https://github.com/project-fifo/fqc.git", {branch, "master"}}},
  {eper, "0.87.0", {git, "https://github.com/massemanet/eper.git", {tag, "0.87.0"}}},
  {recon, ".*", {git, "https://github.com/ferd/recon.git", {tag, "2.2.1"}}}

 ]}.

{plugins, [
           {rebar3_cuttlefish, ".*", {git, "git://github.com/tsloughter/rebar3_cuttlefish.git", {branch, "master"}}}
          ]}.

%% xref checks to run
{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, % exports_not_used, that is a problem with having multiple apps
               deprecated_function_calls, deprecated_functions]}.


{pre_hooks, [{compile, "make version_header"}]}.

{provider_hooks,
 [{post, [{release, cuttlefish}]}]}.

{overrides,
 [{override, setup, [{post_hooks, []}]},
  %% b
  {override, bcrypt,
   [{plugins, [pc]},
    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]},

  {override, bitcask,
   [{plugins, [pc]},
    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]},

  {override, eleveldb,
   [{pre_hooks, [{compile, "c_src/build_deps.sh get-deps"},
                 {compile, "c_src/build_deps.sh"}]},

    {post_hooks, [{clean, "c_src/build_deps.sh clean"}]},

    {plugins, [pc]},

    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]}]}.




{profiles, [
            {short, [{erl_opts, [{d, 'EQC_SHORT_TEST'}]}]},
            {long, [{erl_opts, [{d, 'EQC_LONG_TEST'}]}]},
            {prod, [{relx, [{dev_mode, false}]}]}
           ]}.


{relx,
 [{release, {"snarl", "0.6.2"},
   [
    sasl,
    runtime_tools,
    snarl,
    {recon, load},
    {setup , load},
    {cuttlefish, load},
    {rankmatcher, load},
    {bear, load}, % we need this since folsom doesn't include it
    {eper, load}
   ]},

  {dev_mode, true},
  {include_erts, true},
  {generate_start_script, false},
  {overlay_vars, "rel/vars.config"},
  {overlay,
   [{mkdir, "etc"},
    %%{copy, "rel/files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "rel/files/nodetool", "erts-\{\{erts_vsn\}\}/bin/nodetool"},
    {template, "rel/files/snarl", "bin/snarl"},
    {template, "rel/files/snarl-admin", "bin/snarl-admin"},
    {copy, "_build/default/bin/cuttlefish", "bin/cuttlefish"},
    {copy, "share", "share"},
    {copy, "_build/default/lib/fifo_utils/priv/update_config.sh", "share/"},
    {template, "schema/snarl.schema", "share/schema/00-snarl.schema"},
    {template, "schema/oauth.schema", "share/schema/01-oauth.schema"},
    {template, "schema/erlang_vm.schema", "share/schema/02-vm.schema"},
    {template, "_build/default/lib/riak_core/priv/riak_core.schema", "share/schema/03-riak_core.schema"},
    {template, "schema/lager.schema", "share/schema/04-lager.schema"},
    {template, "_build/default/lib/fifo_db/priv/fifo_db.schema", "share/schema/05-fifo_db.schema"},
    {template, "_build/default/lib/fifo_db/priv/eleveldb.schema", "share/schema/06-eleveldb.schema"},
    {template, "_build/default/lib/mdns_client_lib/priv/mdns_client.schema", "share/schema/07-mdns_client.schema"},
    {template, "_build/default/lib/mdns_server_lib/priv/mdns_server.schema", "share/schema/08-mdns_server.schema"},
    {template, "_build/default/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/00-folsom_ddb.schema"},
    {template, "schema/riak_sysmon.schema", "share/schema/10-riak_sysmon.schema"},
    {template, "_build/default/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/11-folsom_ddb.schema"},
    {template, "schema/snmp.schema", "share/schema/12-snmp.schema"},
    {copy, "apps/snarl/mibs/SNARL-MIB.mib", "share/SNARL-MIB.mib"},
    {copy, "snmp", "snmp"}
   ]}]}.

%% Cuttlefish filename
{cuttlefish_filename, "snarl.conf.example"}.

{dialyzer, [
            {plt_extra_apps, [riak_ensemble, rankmatcher, sgte, folsom, libleofs, base16, chash, fifo_utils, jsx, jsxd, fifo_spec, fifo_dt, riak_core]}
            %%{base_plt_apps, [atom(), ...]},
            %%{base_plt_location, global | file:filename()},
            %%{base_plt_prefix, string()}
          ]}.

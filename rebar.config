% -*- erlang -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
%%{erl_opts, [debug_info, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "../../doc"}]}.
{eunit_opts, [{report,{eunit_surefire, [{dir,"."}]}}]}.
{deps,
 [
  {lager, "2.1.1"},
  %% Lets overwrite stuff that is not 18.0 compatible :(
  {edown,".*",     {git, "https://github.com/uwiger/edown.git",       {branch, "master"}}},
  %%
  {meck, "0.8.2", {git, "git://github.com/basho/meck.git", {tag, "0.8.2"}}},
  {fifo_lager, ".*", {git, "https://github.com/project-fifo/fifo_lager.git", {tag, "0.1.0"}}},
  {clique, ".*", {git, "https://github.com/project-fifo/clique.git", {branch, "develop"}}},
  {cuttlefish, ".*", {git, "https://github.com/tsloughter/cuttlefish.git", {branch, "develop"}}},
  {bitcask, ".*", {git, "https://github.com/basho/bitcask.git", {branch,"feature/otp-17"}}},
  {bcrypt, ".*", {git, "https://github.com/project-fifo/erlang-bcrypt.git", {branch, "master"}}},

  {yubico, ".*", {git, "https://github.com/project-fifo/erlang-yubico.git", {tag, "0.1.3"}}},
  {fifo_db, ".*", {git, "https://github.com/project-fifo/fifo-db.git", {tag, "0.1.7"}}},
  {fifo_dt, "0.1.*", {git, "https://github.com/project-fifo/fifo_dt.git", {tag, "0.1.54"}}},
  fifo_utils,
  {riak_core, ".*", {git, "git://github.com/project-fifo/riak_core", {branch, "fifo-0.6.2"}}},
  {riak_ensemble, ".*", {git, "https://github.com/basho/riak_ensemble.git", {ref,"a62b0cc33b94c28f89613ddbf2be384620c19501"}}},
  {uuid, ".*", {git, "https://github.com/project-fifo/erlang-uuid.git", {tag, "0.4.7"}}},
  {jsx, "1.4.5"},
  rankmatcher,
  mdns_server_lib,
  jsxd,
  {fifo_spec, "0.1.*", {git, "https://github.com/project-fifo/fifo_spec.git", {tag, "0.1.21"}}},
  libsnarlmatch,
  folsom_ddb,
  {esqlite, "0.1.*", {git, "https://github.com/project-fifo/esqlite.git", {tag, "0.1.1"}}},
  {merklet, ".*", {git, "https://github.com/ferd/merklet.git", {ref, "a9af9fc4d662a6771e0bfc8c7d91ff67da230460"}}},
  {oauth2, "0.6.*", {git, "https://github.com/project-fifo/oauth2.git", {ref, "7f88b8af3b09cad4eb83678cb2bdaed00fce6a76"}}},
  eper,
  recon
 ]}.

{plugins, [
           {rebar3_cuttlefish, ".*", {git, "git://github.com/tsloughter/rebar3_cuttlefish.git", {branch, "master"}}}
          ]}.

%% xref checks to run
{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, % exports_not_used, that is a problem with having multiple apps
               deprecated_function_calls, deprecated_functions]}.


{pre_hooks, [{compile, "make version_header"}]}.

{provider_hooks,
 [{post, [{release, cuttlefish}]}]}.

{overrides,
 [
  %% R18
  {override, cluster_info,
   [{erl_opts, [{i,"./priv/"}, debug_info]}]},
  {override, rankmatcher,
   [{erl_opts, [{i,"deps"}, debug_info]}]},
  {override, dflow,
   [{erl_opts, [debug_info]}]},
  {override, dqe,
   [{erl_opts, [debug_info]}]},
  {override, mdns_client_lib,
   [{erl_opts, [debug_info, {parse_transform, lager_transform}]}]},
  {override, edown,
   [{erl_opts, [debug_info]}]},
  {override, eper,
   [{erl_opts, [debug_info]}]},

  {override, riak_core,
   [{erl_opts, [{parse_transform, lager_transform},
                debug_info, {platform_define, "^[0-9]+", namespaced_types},
                {platform_define, "^R15", "old_hash"}]}]},
  {override, wiggle,
   [{erl_opts, [{i, "deps"},
                debug_info,
                {parse_transform, lager_transform}]}]},
  {override, riak_ensemble,
   [{erl_opts, [debug_info,
                warn_untyped_record,
                {parse_transform, lager_transform}]}]},
  {override, pooler,
   [{erl_opts,
     [{platform_define, "^[0-9]+", namespaced_types},
      debug_info,
      inline]}]},
  %% Normal
  {override, setup, [{post_hooks, []}]},

  {override, bcrypt,
   [{plugins, [pc]},
    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]},

  {override, bitcask,
   [{plugins, [pc]},
    {provider_hooks,
     [{post,
       [
        {compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]},

  {override, eleveldb,
   [{pre_hooks, [{compile, "c_src/build_deps.sh get-deps"},
                 {compile, "c_src/build_deps.sh"}]},

    {post_hooks, [{clean, "c_src/build_deps.sh clean"}]},

    {plugins, [pc]},

    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]}]}.

{profiles, [
            {short, [{erl_opts, [{d, 'EQC_SHORT_TEST'}]}]},
            {long, [{erl_opts, [{d, 'EQC_LONG_TEST'}]}]},
            {prod, [{relx, [{dev_mode, false}]}]}
           ]}.

{relx,
 [{release, {"snarl", "0.7.0p5"},
   [
    sasl,
    runtime_tools,
    snarl,
    {recon, load},
    {setup , load},
    {cuttlefish, load},
    {rankmatcher, load},
    {bear, load}, % we need this since folsom doesn't include it
    {eper, load}
   ]},

  {dev_mode, true},
  {include_erts, true},
  {generate_start_script, false},
  {overlay_vars, "rel/vars.config"},
  {overlay,
   [{mkdir, "etc"},
    {copy, "rel/files/erl", "erts-\{\{erts_vsn\}\}/bin/erl"},
    {copy, "rel/files/nodetool", "erts-\{\{erts_vsn\}\}/bin/nodetool"},
    {template, "rel/files/snarl", "bin/snarl"},
    {template, "rel/files/snarl-admin", "bin/snarl-admin"},
    {copy, "_build/default/bin/cuttlefish", "bin/cuttlefish"},
    {copy, "share", "share"},
    {copy, "_build/default/lib/fifo_utils/priv/update_config.sh", "share/"},
    {template, "schema/snarl.schema", "share/schema/00-snarl.schema"},
    {template, "schema/oauth.schema", "share/schema/01-oauth.schema"},
    {template, "schema/erlang_vm.schema", "share/schema/02-vm.schema"},
    {template, "_build/default/lib/riak_core/priv/riak_core.schema", "share/schema/03-riak_core.schema"},
    {template, "_build/default/lib/fifo_lager/priv/lager.schema", "share/schema/04-lager.schema"},
    {template, "_build/default/lib/fifo_db/priv/fifo_db.schema", "share/schema/05-fifo_db.schema"},
    {template, "_build/default/lib/fifo_db/priv/eleveldb.schema", "share/schema/06-eleveldb.schema"},
    {template, "_build/default/lib/mdns_server_lib/priv/mdns_server.schema", "share/schema/07-mdns_server.schema"},
    {template, "_build/default/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/08-folsom_ddb.schema"},
    {template, "schema/riak_sysmon.schema", "share/schema/09-riak_sysmon.schema"},
    {template, "_build/default/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/10-folsom_ddb.schema"},
    {template, "schema/snmp.schema", "share/schema/12-snmp.schema"},
    {copy, "apps/snarl/mibs/SNARL-MIB.mib", "share/SNARL-MIB.mib"},
    {copy, "snmp", "snmp"}
   ]}]}.

%% Cuttlefish filename
{cuttlefish_filename, "snarl.conf.example"}.
